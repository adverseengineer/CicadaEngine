{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$defs": {
		"model": {
			"type": "object",
			"properties": {
				"model path": {
					"type": "string"
				}
			}
		},
		"scene": {
			"type": "object",
			"properties": {
				"scene path": {
					"type": "string"
				}
			}
		},
		"shader": {
			"properties": {
				"vert path": {
					"type": "string"
				},
				"frag path": {
					"type": "string"
				},
				"geom path": {
					"type": "string"
				}
			}
		}
	},
	"type": "object",
	"oneOf": [
		{ "$ref": "#/$defs/model" },
		{ "$ref": "#/$defs/scene" },
		{ "$ref": "#/$defs/shader" }
	]
	
	
}
